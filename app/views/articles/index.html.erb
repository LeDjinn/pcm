<p style="color: green"><%= notice %></p>

<h1>Articles</h1>
<%= link_to "New article", new_article_path, class:"btn btn-secondary" %>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Article</th>
        <th>Price (Local)</th>
        <th>Price (Export)</th>
        <th>Category</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= link_to article.name, article_path(article) %></td>
          <td><%= article.price_local %> €</td>
          <td><%= article.price_export %> €</td>
          <td><%= article.category.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


